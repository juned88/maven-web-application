            {
                sh "mvn deploy"
            }
        }
        stage('Deploy to tomcat')
        {
            steps
            {
               sshagent(['1b861d9e-25f1-4122-b5ab-899d04e7c4ba']) {
   sh " scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@13.234.112.41:/opt/apache-tomcat-9.0.68/webapps"

} 
            }
        }
    }//stages closing
