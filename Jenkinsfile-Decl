}

 tools {
  maven 'maven3.8.6'
  git 'Default'
}
    stages
    {
        stage('Code fetch')
        {
            steps
            {
                git branch: 'development', credentialsId: 'c65f3e1e-695d-46fd-9f16-5a3632d66546', url: 'https://github.com/juned88/maven-web-application.git'
            }
        }
        stage('package building')
        {
            steps
            {
                sh "mvn clean package" 
            }
        }
        stage('Sonar report')
        {
            steps
            {
